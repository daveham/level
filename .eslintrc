{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "standard",
  "plugins": [
    "babel",
    "promise",
    "jest"
  ],
  "env": {
    "node": true,
    "jest/globals": true
  },
  "globals": {
    "Promise": false
  },
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "semi": [2, "always"],
    "padded-blocks": 0,
    "space-before-function-paren": 0,
    "no-console": 0,
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }]
  }
}
